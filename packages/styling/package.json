{
  "name": "@tui/styling",
  "version": "1.0.0",
  "description": "TypeScript/Bun reimplementation of Lip Gloss v2 - declarative terminal styling library",
  "main": "./src/index.ts",
  "exports": {
    ".": "./src/index.ts",
    "./style": "./src/style/index.ts",
    "./color": "./src/color/index.ts",
    "./ansi": "./src/ansi/index.ts",
    "./border": "./src/border/index.ts",
    "./layout": "./src/layout/index.ts",
    "./components": "./src/components/index.ts",
    "./terminal": "./src/terminal/index.ts",
    "./utils": "./src/utils/index.ts",
    "./types": "./src/types/index.ts"
  },
  "scripts": {
    "test": "FORCE_COLOR=1 bun test",
    "test:unit": "FORCE_COLOR=1 bun test \"**/*.test.ts\"",
    "test:performance": "FORCE_COLOR=1 bun test \"**/*.performance.test.ts\"",
    "test:integration": "FORCE_COLOR=1 bun test \"**/integration/*.test.ts\"",
    "test:coverage": "FORCE_COLOR=1 bun test --coverage",
    "lint": "bun run biome check",
    "format": "bun run biome format --write",
    "check": "bun run lint && bun run test"
  },
  "dependencies": {
    "zod": "^3.22.4"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.0.0",
    "@types/bun": "latest"
  },
  "keywords": ["terminal", "styling", "tui", "ansi", "colors", "lipgloss", "bun", "typescript"],
  "author": "TUI Team",
  "license": "MIT"
}
